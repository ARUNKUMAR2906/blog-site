<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Home - Blog</title>
  </head>
  <body>
    <div class="relative">
      <%- include('./partials/Navbar.ejs') %>
      <!-- Blog Section -->
      <div class="container mx-auto p-5">
        <% if (blogs.length > 0) { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% blogs.forEach(blog => { %>
            <div
            class="max-w-xs bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700"
          >
            <a href="/blog/view/<%= blog._id %>">
              <img
                class="rounded-t-lg h-44 w-full object-cover"
                src="/uploads/<%= blog.coverImage %>"
                alt="Cover image for <%= blog.title %>"
              />
            </a>
            <div class="p-4">
              <a href="#">
                <h5
                  class="mb-2 text-lg font-bold tracking-tight text-gray-900 dark:text-white"
                >
                  <%= blog.title %>
                </h5>
              </a>
              <p class="mb-3 text-sm font-normal text-gray-700 dark:text-gray-400">
                <%= blog.content.substring(0, 30) %>...
              </p>
              <p class="mb-3 text-sm font-normal text-gray-700 dark:text-gray-400"><%= blog.views %> <%= blog.views === 1 || blog.views === 0 ? 'view' : 'views' %></p>
              <a
                href="/blog/view/<%= blog._id %>"
                class="inline-flex items-center px-3 py-2 text-xs font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
              >
                View
                <svg
                  class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 14 10"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                  />
                </svg>
              </a>
            </div>
          </div>
          
          <% }) %>
        </div>
        <% } else { %>
        <div class="no-blogs text-center mt-10">
          <p class="text-gray-500 dark:text-gray-400">No blogs to display.</p>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
